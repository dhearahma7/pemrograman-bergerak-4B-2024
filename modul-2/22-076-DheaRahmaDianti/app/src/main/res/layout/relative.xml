<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RelativeLayoutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/univ_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="7dp"
            android:text="Universitas Trunojoyo"
            android:textColor="@color/black"
            android:textSize="23sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"
            android:layout_gravity="right"
            android:layout_marginLeft="330dp" />

        <TextView
            android:id="@+id/beranda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Beranda"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/foto_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Aktivitas Kegiatan"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/bagian_foto1"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/foto_title"
            android:src="@drawable/foto1"
            android:layout_marginStart="24dp" />

        <ImageView
            android:id="@+id/bagian_foto2"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="0dp"
            android:layout_alignTop="@id/bagian_foto1"
            android:layout_toEndOf="@id/bagian_foto1"
            android:src="@drawable/foto2" />

        <ImageView
            android:id="@+id/bagian_foto3"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/bagian_foto1"
            android:src="@drawable/foto1"
            android:layout_marginStart="24dp" />

        <ImageView
            android:id="@+id/bagian_foto4"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="0dp"
            android:layout_alignTop="@id/bagian_foto3"
            android:layout_toEndOf="@id/bagian_foto3"
            android:src="@drawable/foto2" />

        <TextView
            android:id="@+id/artikel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_bold"
            android:layout_below="@id/bagian_foto3"
            android:text="Artikel"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/artikel_foto1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/artikel_title"
            android:src="@drawable/foto1"
            android:layout_marginStart="24dp" />

        <TextView
            android:id="@+id/bagian_artikel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/artikel_title"
            android:layout_toEndOf="@id/artikel_foto1"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="35dp"
            android:text="Terlalu Jago, Trunojoyo Juara Lagi"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/bagian_artikel2"
            android:layout_width="220dp"
            android:layout_height="72dp"
            android:layout_alignTop="@id/bagian_artikel1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/artikel_foto1"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:text="Universitas Trunojoyo berhasil meraih juara 1 dalam ajang perlombaan debat nasional yang diselenggarakan oleh..."
            android:textColor="@color/black"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/artikel_foto2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/artikel_foto1"
            android:src="@drawable/foto1"
            android:layout_marginStart="24dp" />

        <TextView
            android:id="@+id/bagian_artikel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bagian_artikel2"
            android:layout_toEndOf="@id/artikel_foto1"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:text="Terlalu Jago, Trunojoyo Juara Lagi"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/bagian_artikel4"
            android:layout_width="220dp"
            android:layout_height="72dp"
            android:layout_alignTop="@id/bagian_artikel3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/artikel_foto2"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:text="Universitas Trunojoyo berhasil meraih juara 1 dalam ajang perlombaan debat nasional yang diselenggarakan oleh..."
            android:textColor="@color/black"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/artikel_foto3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/artikel_foto2"
            android:src="@drawable/foto1"
            android:layout_marginStart="24dp" />

        <TextView
            android:id="@+id/bagian_artikel5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bagian_artikel4"
            android:layout_toEndOf="@id/artikel_foto3"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:text="Terlalu Jago, Trunojoyo Juara Lagi"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/bagian_artikel6"
            android:layout_width="220dp"
            android:layout_height="72dp"
            android:layout_alignTop="@id/bagian_artikel5"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/artikel_foto3"
            android:fontFamily="@font/poppins_medium"
            android:gravity="start"
            android:justificationMode="inter_word"
            android:text="Universitas Trunojoyo berhasil meraih juara 1 dalam ajang perlombaan debat nasional yang diselenggarakan oleh..."
            android:textColor="@color/black"
            android:textSize="13sp" />

    </RelativeLayout>

</ScrollView>